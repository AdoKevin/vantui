{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "skipLibCheck": false,
    "resolveJsonModule": true
  },
  "include": [
    "*.js",
    "packages/*/*.js",
    "packages/*/*.d.ts",
    "packages/**/src",
    "packages/**/config",
    "packages/**/site",
    "packages/**/utils",
    "packages/**/ui",
    "packages/**/types",
    "packages/**/sample",
    "packages/**/__test__",
    "packages/**/antm.config.ts",
    "packages/**/scripts/**/*.js"
  ]
}
